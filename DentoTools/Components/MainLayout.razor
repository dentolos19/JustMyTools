@inherits LayoutComponentBase

<Layout Sider="true">
    <LayoutSider>
        <LayoutSiderContent>
            <Bar Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small" Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark">
                <BarToggler/>
                <BarBrand>
                    <BarItem>
                        <BarLink>
                            <BarIcon IconName="@Logo"/>
                            DentoTools
                        </BarLink>
                    </BarItem>
                </BarBrand>
                <BarMenu>
                    <BarStart>
                        <BarItem>
                            <BarDropdown>
                                <BarDropdownToggle>
                                    <BarIcon IconName="IconName.Memory"/>
                                    Generators
                                </BarDropdownToggle>
                                <BarDropdownMenu>
                                    <BarDropdownItem>
                                        <BarLink To="gen/pass">
                                            Password Generator
                                        </BarLink>
                                    </BarDropdownItem>
                                    <BarDropdownItem>
                                        <BarLink To="gen/guid">
                                            GUID Generator
                                        </BarLink>
                                    </BarDropdownItem>
                                    <BarDropdownItem>
                                        <BarLink To="gen/qr">
                                            QR Code Generator
                                        </BarLink>
                                    </BarDropdownItem>
                                </BarDropdownMenu>
                            </BarDropdown>
                        </BarItem>
                        <BarItem>
                            <BarDropdown>
                                <BarDropdownToggle>
                                    <BarIcon IconName="IconName.Spa"/>
                                    Converters
                                </BarDropdownToggle>
                                <BarDropdownMenu>
                                    <BarDropdownItem>
                                        <BarLink To="cvt/roman">
                                            Roman Numerals Converter
                                        </BarLink>
                                    </BarDropdownItem>
                                </BarDropdownMenu>
                            </BarDropdown>
                        </BarItem>
                    </BarStart>
                </BarMenu>
            </Bar>
        </LayoutSiderContent>
    </LayoutSider>
    <Container Padding="Padding.Is4">
        @Body
    </Container>
</Layout>

@code
{

    private RenderFragment Logo => @<Figure Size="FigureSize.Is32x32">
                                       <FigureImage Source="assets/images/icon.png"/>
                                   </Figure>;

}